<Window x:Class="SkladApp.Views.EditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Record" Height="Auto" Width="400" SizeToContent="Height">
  <Grid Margin="20">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <StackPanel x:Name="FieldsPanel" Grid.Row="0" Margin="0,0,0,10"/>
    <StackPanel Orientation="Horizontal" Grid.Row="1">
      <Button Content="Save" Click="SaveButton_Click" Margin="0,0,10,0"/>
      <Button Content="Delete" Click="DeleteButton_Click"/>
    </StackPanel>
  </Grid>
</Window>